<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/employee_avatar_image_avatar"
        android:layout_width="@dimen/details_screen_image_side"
        android:layout_height="@dimen/details_screen_image_side"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_refresh"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/employee_avatar_name"
        style="@style/Base.TextAppearance.AppCompat.Display3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="employee name" />

</LinearLayout>